<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" id="artist_name" value="<%= @song.name %>"></br><br>

  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name"></br><br>


  <label>Genres</label>
  <% Genre.all.each do |genre| %>
    <label for="genre"><%= genre.name %></label>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%='checked' if @song.genre_id == genre %>><%= genre.name %></input>
  <% end %><br><br>

  <input type="submit" value="Create">
</form>
